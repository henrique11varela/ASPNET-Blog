@model Comment
<div class="w-full bg-gray-50 mb-2 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white">
        <p class="my-2">@Model.Body</p>
        <div class="flex justify-between items-center">
                <a class="min-w-20 block text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" asp-controller="User" asp-action="Show" asp-route-id="@Model.UserId">@Model.User().Name</a>
                <p class="block text-sm font-medium text-gray-900 dark:text-white">@Model.CreatedAt</p>
        </div>
</div>